{
    "name": "rech-editor-vscode",
    "displayName": "rech-editor-vscode",
    "description": "Package for using Rech's Cobol extensions with Visual Studio Code.",
    "version": "0.0.10",
    "publisher": "rechinformatica",
    "engines": {
        "vscode": "^1.26.0"
    },
    "icon": "images/cobol.png",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/RechInformatica/rech-editor-vscode.git"
    },
    "categories": [
        "Programming Languages",
        "Snippets",
        "Other"
    ],
    "activationEvents": [
        "onLanguage:COBOL"
    ],
    "main": "./out/extension",
    "types": "./out/extension.d.ts",
    "contributes": {
        "configuration": {
            "type": "object",
            "title": "COBOL configuration",
            "properties": {
                "coboleditor.tabstops": {
                    "type": "array",
                    "items": {
                        "type": "number",
                        "title": "tabstops",
                        "properties": {
                            "tabstop": {
                                "type": "number",
                                "description": "tabstop"
                            }
                        }
                    },
                    "default": [
                        0,
                        7,
                        11,
                        19,
                        29,
                        34
                    ],
                    "description": "COBOL tabstops"
                }
            }
        },
        "configurationDefaults": {
            "[COBOL]": {
                "files.autoGuessEncoding": false,
                "files.encoding": "windows1252",
                "editor.formatOnType": true,
                "editor.rulers": [
                    120
                ],
                "editor.detectIndentation": false,
                "editor.tabSize": 3,
                "editor.wordSeparators": "`~!@#$%^&*()=+[{]}\\|;:'\",.<>/?"
            }
        },
        "languages": [
            {
                "id": "COBOL",
                "aliases": [
                    "COBOL",
                    "Cobol",
                    "cobol"
                ],
                "firstLine": ".*(\\$[sS][eE][tT]|[pP][rR][oO][gG][rR][aA][mM]\\-[iI][dD]|[iI][dD][eE][nN][tT][iI][fF][iI][cC][aA][tT][iI][oO][nN]).*",
                "extensions": [
                    ".cbl",
                    ".cob",
                    ".cpy",
                    ".cpb",
                    ".lsr"
                ],
                "configuration": "./cobol.configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "COBOL",
                "scopeName": "source.cobol",
                "path": "./syntaxes/COBOL.tmLanguage.json"
            }
        ],
        "snippets": [
            {
                "language": "COBOL",
                "path": "./snippets/cobol.json"
            }
        ],
        "commands": [
            {
                "command": "extension.cobolMove",
                "title": "MOVE"
            },
            {
                "command": "extension.cobolTo",
                "title": "TO"
            },
            {
                "command": "extension.fonGrep",
                "title": "fonGrep"
            }
        ],
        "menus": {
            "editor/context": [
                {
                    "command": "extension.cobolMove",
                    "group": "cobolplugin",
                    "when": "editorTextFocus && editorLangId == COBOL"
                },
                {
                    "command": "extension.cobolTo",
                    "group": "cobolplugin",
                    "when": "editorTextFocus && editorLangId == COBOL"
                }
            ]
        },
        "keybindings": [
            {
                "comment": "Ainda não é a rotina ideal... Mas por enquanto quebra um galho",
                "command": "editor.action.commentLine",
                "key": "ctrl+="
            },
            {
                "command": "editor.action.nextMatchFindAction",
                "key": "F3"
            },            
            {
                "command": "editor.action.previousMatchFindAction",
                "key": "F4"
            },
            {
                "command": "editor.action.previousMatchFindAction",
                "key": "shift+F3"
            },            
            {
                "command": "deleteAllRight",
                "key": "ctrl+-"
            },
            {
                "command": "editor.action.deleteLines",
                "key": "ctrl+F12"
            },
            {
                "command": "editor.action.insertLineBefore",
                "key": "ctrl+n"
            },
            {
                "command": "extension.cobolMove",
                "key": "ctrl+shift+m"
            },
            {
                "command": "extension.cobolTo",
                "key": "ctrl+t"
            },
            {
                "command": "extension.fonGrep",
                "key": "ctrl+l"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.6.1",
        "vscode": "^1.1.21",
        "@types/node": "^8.10.25",
        "@types/mocha": "^2.2.42"
    }
}
