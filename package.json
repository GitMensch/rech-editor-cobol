{
    "name": "rech-editor-vscode",
    "displayName": "rech-editor-vscode",
    "description": "Package for using Rech's Cobol extensions with Visual Studio Code.",
    "version": "0.0.10",
    "publisher": "rechinformatica",
    "engines": {
        "vscode": "^1.26.0"
    },
    "icon": "images/cobol.png",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/RechInformatica/rech-editor-vscode.git"
    },
    "categories": [
        "Programming Languages",
        "Snippets",
        "Other"
    ],
    "activationEvents": [
        "onLanguage:COBOL"
    ],
    "main": "./out/extension.js",
    "types": [
        "./out/cobol/*.d.ts",
        "./out/commons/*.d.ts",
        "./out/editor/*.d.ts",
        "./out/indent/*.d.ts",
        "./out/*.d.ts"
    ],
    "contributes": {
        "taskDefinitions": [
            {
                "type": "co",
                "properties": {
                    "source": {
                        "type": "string",
                        "description": "Fonte a ser compilado"
                    }
                },
                "required": []
            }
        ],
        "configuration": {
            "type": "object",
            "title": "COBOL configuration",
            "properties": {
                "coboleditor.tabstops": {
                    "type": "array",
                    "items": {
                        "type": "number",
                        "title": "tabstops",
                        "properties": {
                            "tabstop": {
                                "type": "number",
                                "description": "tabstop"
                            }
                        }
                    },
                    "default": [
                        0,
                        7,
                        11,
                        19,
                        29,
                        34
                    ],
                    "description": "COBOL tabstops"
                }
            }
        },
        "configurationDefaults": {
            "[COBOL]": {
                "files.autoGuessEncoding": false,
                "files.encoding": "windows1252",
                "editor.formatOnType": true,
                "editor.rulers": [
                    120
                ],
                "editor.detectIndentation": false,
                "editor.tabSize": 3,
                "editor.wordSeparators": "`~!@#$%^&*()=+[{]}\\|;:'\",.<>/?",
                "editor.trimAutoWhitespace": false,
                "editor.useTabStops": false
            }
        },
        "languages": [
            {
                "id": "COBOL",
                "aliases": [
                    "COBOL",
                    "Cobol",
                    "cobol"
                ],
                "firstLine": ".*(\\$[sS][eE][tT]|[pP][rR][oO][gG][rR][aA][mM]\\-[iI][dD]|[iI][dD][eE][nN][tT][iI][fF][iI][cC][aA][tT][iI][oO][nN]).*",
                "extensions": [
                    ".cbl",
                    ".cob",
                    ".cpy",
                    ".cpb",
                    ".lsr"
                ],
                "configuration": "./cobol.configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "COBOL",
                "scopeName": "source.cobol",
                "path": "./syntaxes/COBOL.tmLanguage.json"
            }
        ],
        "snippets": [
            {
                "language": "COBOL",
                "path": "./snippets/cobol.json"
            }
        ],
        "commands": [
            {
                "command": "extension.cobolMove",
                "title": "MOVE"
            },
            {
                "command": "extension.cobolTo",
                "title": "TO"
            },
            {
                "command": "extension.flagGenerator",
                "title": "flagGenerator"
            },
            {
                "command": "extension.checkout",
                "title": "checkout"
            },
            {
                "command": "extension.compile",
                "title": "compile"
            },
            {
                "command": "extension.update",
                "title": "update"
            },
            {
                "command": "extension.commit",
                "title": "commit"
            },
            {
                "command": "extension.findNextParagraph",
                "title": "findNextParagraph"
            },
            {
                "command": "extension.findPreviousParagraph",
                "title": "findPreviousParagraph"
            },
            {
                "command": "extension.findNextBlankLine",
                "title": "findNextBlankLine"
            },
            {
                "command": "extension.findPreviousBlankLine",
                "title": "findPreviousBlankLine"
            },
            {
                "command": "extension.indent",
                "key": "indent",
                "title": "indent"
            },
            {
                "command": "extension.indentLeft",
                "key": "indentLeft",
                "title": "indentLeft"
            },
            {
                "command": "extension.indentRight",
                "key": "indentRight",
                "title": "indentRight"
            }
        ],
        "menus": {
            "editor/context": [
                {
                    "command": "extension.cobolMove",
                    "group": "cobolplugin",
                    "when": "editorTextFocus && editorLangId == COBOL"
                },
                {
                    "command": "extension.cobolTo",
                    "group": "cobolplugin",
                    "when": "editorTextFocus && editorLangId == COBOL"
                }
            ]
        },
        "keybindings": [
            {
                "comment": "Ainda não é a rotina ideal... Mas por enquanto quebra um galho",
                "command": "editor.action.commentLine",
                "key": "alt+="
            },
            {
                "key": "ctrl+right",
                "command": "cursorWordStartRight",
                "when": "editorTextFocus"
            },
            {
                "command": "editor.action.nextMatchFindAction",
                "key": "F3"
            },
            {
                "command": "editor.action.previousMatchFindAction",
                "key": "F4"
            },
            {
                "command": "editor.action.previousMatchFindAction",
                "key": "shift+F3"
            },
            {
                "command": "deleteAllRight",
                "key": "alt+l"
            },
            {
                "command": "editor.action.deleteLines",
                "key": "ctrl+F12"
            },
            {
                "command": "extension.findWordForward",
                "key": "ctrl+0"
            },
            {
                "command": "extension.copyWordUnderCursor",
                "key": "ctrl+abnt_c1"
            },
            {
                "command": "extension.replaceWordUnderCursor",
                "key": "shift+ctrl+abnt_c1"
            },
            {
                "command": "extension.findWordBackward",
                "key": "ctrl+9"
            },
            {
                "command": "extension.newLineAbove",
                "key": "ctrl+n"
            },
            {
                "command": "extension.cobolMove",
                "key": "ctrl+shift+m"
            },
            {
                "command": "extension.cobolTo",
                "key": "ctrl+t"
            },
            {
                "command": "extension.flagGenerator",
                "key": "ctrl+alt+b"
            },
            {
                "command": "extension.cobolInsertCommentLine",
                "key": "alt+n"
            },
            {
                "command": "extension.cobolInsertLineSeparator",
                "key": "alt+numpad_subtract"
            },
            {
                "command": "extension.cobolUpdateLineDots",
                "key": "alt+abnt_c1"
            },
            {
                "command": "extension.checkout",
                "key": "alt+f5"
            },
            {
                "command": "extension.compile",
                "key": "ctrl+f9"
            },
            {
                "command": "extension.update",
                "key": "alt+f6"
            },
            {
                "command": "extension.commit",
                "key": "alt+f7"
            },
            {
                "command": "extension.copyLine",
                "key": "F10"
            },
            {
                "command": "extension.pasteLine",
                "key": "F11"
            },
            {
                "command": "extension.findNextParagraph",
                "key": "ctrl+k"
            },
            {
                "command": "extension.findPreviousParagraph",
                "key": "ctrl+shift+k"
            },
            {
                "command": "extension.indent",
                "key": "ctrl+p"
            },
            {
                "command": "extension.indentLeft",
                "key": "alt+shift+left"
            },
            {
                "command": "extension.indentRight",
                "key": "alt+shift+right"
            },
            {
                "command": "extension.findNextBlankLine",
                "key": "alt+p"
            },
            {
                "command": "extension.findPreviousBlankLine",
                "key": "alt+shift+p"
            },
            {
                "command": "extension.cursorPos51",
                "key": "ctrl+1"
            },
            {
                "command": "extension.cursorPos12",
                "key": "ctrl+2"
            },
            {
                "command": "extension.cursorPos30",
                "key": "ctrl+3"
            },
            {
                "command": "extension.cursorPos20",
                "key": "ctrl+4"
            },
            {
                "command": "extension.cursorPos35",
                "key": "ctrl+5"
            },
            {
                "command": "extension.cursorPos08",
                "key": "ctrl+8"
            },
            {
                "command": "editor.action.copyLinesUpAction",
                "key": "ctrl+shift+up"
            },
            {
                "command": "editor.action.copyLinesDownAction",
                "key": "ctrl+shift+down"
            },
            {
                "command": "editor.action.moveLinesDownAction",
                "key": "alt+shift+down"
            },
            {
                "command": "editor.action.moveLinesUpAction",
                "key": "alt+shift+up"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "dependencies": {
        "@types/q": "^1.0.0",
        "q": "^1.4.1"
    },
    "devDependencies": {
        "typescript": "^2.6.1",
        "vscode": "^1.1.21",
        "@types/node": "^8.10.25",
        "@types/mocha": "^2.2.42"
    }
}
