{
    "name": "rech-editor-vscode",
    "displayName": "rech-editor-vscode",
    "description": "Package for using Rech's Cobol extensions with Visual Studio Code.",
    "version": "0.0.10",
    "publisher": "rechinformatica",
    "engines": {
        "vscode": "^1.26.0"
    },
    "icon": "images/cobol.png",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/RechInformatica/rech-editor-vscode.git"
    },
    "categories": [
        "Programming Languages",
        "Snippets",
        "Other"
    ],
    "activationEvents": [
        "onLanguage:COBOL"
    ],
    "main": "./out/extension.js",
    "types": [
        "./out/cobol/*.d.ts",
        "./out/commons/*.d.ts",
        "./out/editor/*.d.ts",
        "./out/indent/*.d.ts",
        "./out/*.d.ts"
    ],
    "contributes": {
        "taskDefinitions": [
            {
                "type": "co",
                "properties": {
                    "source": {
                        "type": "string",
                        "description": "Fonte a ser compilado"
                    }
                },
                "required": []
            }
        ],
        "configuration": {
            "type": "object",
            "title": "COBOL configuration",
            "properties": {
                "rech.editor.vscode.tabstops": {
                    "type": "array",
                    "items": {
                        "type": "number",
                        "title": "tabstops",
                        "properties": {
                            "tabstop": {
                                "type": "number",
                                "description": "tabstop"
                            }
                        }
                    },
                    "default": [
                        0,
                        7,
                        11,
                        19,
                        29,
                        34
                    ],
                    "description": "COBOL tabstops"
                },
                "comments-highlight.tags": {
                    "type": "array",
                    "description": "Tags which are used to color the comments. Changes require a restart of VS Code to take effect",
                    "default": [
                        {
                            "tag": "!",
                            "color": "#ff2d00",
                            "backgroundColor": "transparent"
                        },
                        {
                            "tag": "?",
                            "color": "#3498db",
                            "backgroundColor": "transparent"
                        },
                        {
                            "tag": "todo",
                            "color": "#ff8c00",
                            "backgroundColor": "transparent"
                        },
                        {
                            "tag": "*",
                            "color": "#98c379",
                            "backgroundColor": "transparent"
                        },
                        {
                            "tag": "RechDocType",
                            "color": "#b294bb",
                            "backgroundColor": "transparent"
                        },
                        {
                            "tag": "RechDocVariable",
                            "color": "#c5c8c6",
                            "backgroundColor": "transparent"
                        }
                    ]
                }
            }
        },
        "configurationDefaults": {
            "[COBOL]": {
                "files.autoGuessEncoding": false,
                "files.encoding": "windows1252",
                "editor.formatOnType": true,
                "editor.rulers": [
                    120
                ],
                "editor.detectIndentation": true,
                "editor.tabSize": 3,
                "editor.wordSeparators": "`~!@#$%^&*()=+[{]}\\|;:'\",.<>/?",
                "editor.trimAutoWhitespace": false,
                "editor.useTabStops": true
            }
        },
        "languages": [
            {
                "id": "COBOL",
                "aliases": [
                    "COBOL",
                    "Cobol",
                    "cobol"
                ],
                "firstLine": ".*(\\$[sS][eE][tT]|[pP][rR][oO][gG][rR][aA][mM]\\-[iI][dD]|[iI][dD][eE][nN][tT][iI][fF][iI][cC][aA][tT][iI][oO][nN]).*",
                "extensions": [
                    ".cbl",
                    ".cob",
                    ".cpy",
                    ".cpb",
                    ".tpl",
                    ".lsr"
                ],
                "configuration": "./cobol.configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "COBOL",
                "scopeName": "source.cobol",
                "path": "./syntaxes/COBOL.tmLanguage.json"
            }
        ],
        "snippets": [
            {
                "language": "COBOL",
                "path": "./snippets/cobol.json"
            },
            {
                "language": "bat",
                "path": "./snippets/bat.json"
            }
        ],
        "commands": [
            {
                "command": "rech.editor.vscode.cobolMove",
                "title": "MOVE"
            },
            {
                "command": "rech.editor.vscode.cobolTo",
                "title": "TO"
            },
            {
                "command": "rech.editor.vscode.CobolFlagGenerator",
                "title": "flagGenerator"
            },
            {
                "command": "rech.editor.vscode.pullWord",
                "title": "pullWord"
            },
            {
                "command": "rech.editor.vscode.tab",
                "title": "tab"
            },
            {
                "command": "rech.editor.vscode.revtab",
                "title": "revtab"
            },
            {
                "command": "rech.editor.vscode.findNextParagraph",
                "title": "findNextParagraph"
            },
            {
                "command": "rech.editor.vscode.findPreviousParagraph",
                "title": "findPreviousParagraph"
            },
            {
                "command": "rech.editor.vscode.findNextBlankLine",
                "title": "findNextBlankLine"
            },
            {
                "command": "rech.editor.vscode.findPreviousBlankLine",
                "title": "findPreviousBlankLine"
            }
        ],
        "menus": {
            "editor/context": [
                {
                    "command": "rech.editor.vscode.cobolMove",
                    "group": "cobolplugin",
                    "when": "editorTextFocus && editorLangId == COBOL"
                },
                {
                    "command": "rech.editor.vscode.cobolTo",
                    "group": "cobolplugin",
                    "when": "editorTextFocus && editorLangId == COBOL"
                }
            ]
        },
        "keybindings": [
            {
                "comment": "Ainda não é a rotina ideal... Mas por enquanto quebra um galho",
                "command": "editor.action.commentLine",
                "key": "alt+=",
                "when": "editorLangId == COBOL"
            },
            {
                "key": "ctrl+right",
                "command": "cursorWordStartRight",
                "when": "editorTextFocus"
            },
            {
                "command": "editor.action.nextMatchFindAction",
                "key": "F3"
            },
            {
                "command": "editor.action.previousMatchFindAction",
                "key": "F4"
            },
            {
                "command": "editor.action.previousMatchFindAction",
                "key": "shift+F3"
            },
            {
                "command": "deleteAllRight",
                "key": "alt+l"
            },
            {
                "command": "editor.action.deleteLines",
                "key": "ctrl+F12"
            },
            {
                "command": "rech.editor.vscode.findWordForward",
                "key": "ctrl+0"
            },
            {
                "command": "rech.editor.vscode.findWordBackward",
                "key": "ctrl+9"
            },
            {
                "command": "rech.editor.vscode.copyWordUnderCursor",
                "key": "ctrl+abnt_c1"
            },
            {
                "command": "rech.editor.vscode.replaceWordUnderCursor",
                "key": "shift+ctrl+abnt_c1"
            },
            {
                "command": "rech.editor.vscode.newLineAbove",
                "key": "ctrl+shift+enter"
            },
            {
                "command": "rech.editor.vscode.cobolMove",
                "key": "ctrl+shift+m",
                "when": "editorLangId == COBOL"
            },
            {
                "command": "rech.editor.vscode.cobolElse",
                "key": "ctrl+e",
                "when": "editorLangId == COBOL"
            },
            {
                "command": "rech.editor.vscode.cobolTo",
                "key": "ctrl+t",
                "when": "editorLangId == COBOL"
            },
            {
                "command": "rech.editor.vscode.CobolFlagGenerator",
                "key": "ctrl+alt+b",
                "when": "editorLangId == COBOL"
            },
            {
                "command": "rech.editor.vscode.pullWord",
                "key": "alt+w"
            },
            {
                "command": "rech.editor.vscode.cobolInsertStartComment",
                "key": "alt+numpad_multiply"
            },
            {
                "command": "rech.editor.vscode.cobolInsertEndComment",
                "key": "ctrl+shift+numpad_multiply",
                "when": "editorLangId == COBOL"
            },
            {
                "command": "rech.editor.vscode.cobolInsertCommentLine",
                "key": "alt+n"
            },
            {
                "command": "rech.editor.vscode.cobolInsertLineSeparator",
                "key": "alt+numpad_subtract",
                "when": "editorLangId == COBOL"
            },
            {
                "command": "rech.editor.vscode.cobolUpdateLineDots",
                "key": "alt+abnt_c1"
            },
            {
                "command": "rech.editor.vscode.tab",
                "key": "tab",
                "when": "editorLangId == COBOL && !inSnippetMode"
            },
            {
                "command": "rech.editor.vscode.revtab",
                "key": "shift+tab",
                "when": "editorLangId == COBOL && !inSnippetMode"
            },
            {
                "command": "rech.editor.vscode.copyLine",
                "key": "F10"
            },
            {
                "command": "rech.editor.vscode.pasteLine",
                "key": "F11"
            },
            {
                "command": "rech.editor.vscode.replaceLine",
                "key": "shift+F11"
            },
            {
                "command": "rech.editor.vscode.findNextParagraph",
                "key": "alt+k",
                "when": "editorLangId == COBOL"
            },
            {
                "command": "rech.editor.vscode.findPreviousParagraph",
                "key": "alt+shift+k",
                "when": "editorLangId == COBOL"
            },
            {
                "command": "rech.editor.vscode.findNextBlankLine",
                "key": "alt+p"
            },
            {
                "command": "rech.editor.vscode.findPreviousBlankLine",
                "key": "alt+shift+p"
            },
            {
                "command": "rech.editor.vscode.cursorPos51",
                "key": "ctrl+1",
                "when": "editorLangId == COBOL"
            },
            {
                "command": "rech.editor.vscode.cursorPos12",
                "key": "ctrl+2",
                "when": "editorLangId == COBOL"
            },
            {
                "command": "rech.editor.vscode.cursorPos30",
                "key": "ctrl+3",
                "when": "editorLangId == COBOL"
            },
            {
                "command": "rech.editor.vscode.cursorPos20",
                "key": "ctrl+4",
                "when": "editorLangId == COBOL"
            },
            {
                "command": "rech.editor.vscode.cursorPos35",
                "key": "ctrl+5",
                "when": "editorLangId == COBOL"
            },
            {
                "command": "rech.editor.vscode.cursorPos08",
                "key": "ctrl+8",
                "when": "editorLangId == COBOL"
            },
            {
                "command": "editor.action.copyLinesUpAction",
                "key": "ctrl+shift+up"
            },
            {
                "command": "editor.action.copyLinesDownAction",
                "key": "ctrl+shift+down"
            },
            {
                "command": "editor.action.moveLinesDownAction",
                "key": "alt+shift+down"
            },
            {
                "command": "editor.action.moveLinesUpAction",
                "key": "alt+shift+up"
            },
            {
                "command": "editor.action.transformToLowercase",
                "key": "ctrl+alt+l"
            },
            {
                "command": "editor.action.transformToUppercase",
                "key": "ctrl+alt+u"
            },
            {
                "command": "rech.editor.vscode.insertTodo",
                "key": "ctrl+shift+d"
            },
            {
                "command": "rech.editor.vscode.cobolLineEndDot",
                "key": "alt+oem_period",
                "when": "editorLangId == COBOL"
            },
            {
                "command": "rech.editor.vscode.cobolLineEndComma",
                "key": "alt+oem_comma",
                "when": "editorLangId == COBOL"
            },
            {
                "command": "rech.editor.vscode.cobolInvertMoveOperators",
                "key": "ctrl+alt+d",
                "when": "editorLangId == COBOL"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "package": "vsce package",
        "compile": "tsc -p ./",
        "watch:client": "tsc -watch -p ./",
        "watch:server": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && mocha -r ts-node/register ./src/test/**/*.test.ts"
    },
    "dependencies": {
        "@types/q": "^1.0.0",
        "iconv-lite": "^0.4.24",
        "q": "^1.4.1",
        "vsce": "^1.53.0"
    },
    "devDependencies": {
        "@types/chai": "^4.1.6",
        "@types/mocha": "^2.2.48",
        "@types/node": "^8.10.25",
        "chai": "^4.2.0",
        "mocha": "^5.2.0",
        "ts-node": "^7.0.1",
        "typescript": "^2.6.1",
        "vscode": "^1.1.21",
        "vscode-languageclient": "^4.1.4",
        "vscode-languageserver": "^4.1.3"
    }
}
