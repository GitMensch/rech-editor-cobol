{
    "name": "rech-editor-vscode",
    "displayName": "rech-editor-vscode",
    "description": "Rech Informática extension for editing Batch files with Visual Studio Code.",
    "version": "0.0.1",
    "publisher": "rechinformatica",
    "engines": {
        "vscode": "^1.26.0"
    },
    "icon": "images/cobol.png",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/RechInformatica/rech-editor-vscode/issues",
        "email": "smcbreen@microsoft.com"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/RechInformatica/rech-editor-vscode.git"
    },
    "categories": [
        "Programming Languages",
        "Snippets",
        "Other"
    ],
    "activationEvents": [
        "onLanguage:COBOL"
    ],
    "main": "./out/extension.js",
    "types": [
        "./out/cobol/*.d.ts",
        "./out/commons/*.d.ts",
        "./out/editor/*.d.ts",
        "./out/indent/*.d.ts",
        "./out/*.d.ts"
    ],
    "contributes": {
        "taskDefinitions": [
            {
                "type": "co",
                "properties": {
                    "source": {
                        "type": "string",
                        "description": "Fonte a ser compilado"
                    }
                },
                "required": []
            }
        ],
        "configuration": {
            "type": "object",
            "title": "COBOL configuration",
            "properties": {
                "rech.editor.vscode.tabstops": {
                    "type": "array",
                    "items": {
                        "type": "number",
                        "title": "tabstops",
                        "properties": {
                            "tabstop": {
                                "type": "number",
                                "description": "tabstop"
                            }
                        }
                    },
                    "default": [
                        0,
                        7,
                        11,
                        19,
                        29,
                        34,
                        50
                    ],
                    "description": "COBOL tabstops"
                },
                "rech.editor.vscode.autodiagnostic": {
                    "type": "boolean",
                    "description": "Whether auto diagnosis is enabled",
                    "default": false
                },
                "rech.editor.vscode.diagnosticfilter": {
                    "type": "array",
                    "description": "Filter of warnings that should not be considered in diagnostic",
                    "default": [
                        "[W002]",
                        "[W003]"
                    ]
                },
                "rech.editor.vscode.snippetsRepositories": {
                    "type": "array",
                    "description": "Repositories where JSON snippets are located"
                },
                "comments-highlight.tags": {
                    "type": "array",
                    "description": "Tags which are used to color the comments. Changes require a restart of VS Code to take effect",
                    "default": [
                        {
                            "tag": "!",
                            "color": "#ff2d00",
                            "backgroundColor": "transparent"
                        },
                        {
                            "tag": "todo:",
                            "color": "#ff8c00",
                            "backgroundColor": "transparent"
                        },
                        {
                            "tag": "todo-",
                            "color": "#ff8c00",
                            "backgroundColor": "transparent"
                        },
                        {
                            "tag": "*",
                            "color": "#98c379",
                            "backgroundColor": "transparent"
                        },
                        {
                            "tag": "RechDocType",
                            "color": "#b294bb",
                            "backgroundColor": "transparent"
                        },
                        {
                            "tag": "RechDocVariable",
                            "color": "#c5c8c6",
                            "backgroundColor": "transparent"
                        }
                    ]
                }
            }
        },
        "configurationDefaults": {
            "[COBOL]": {
                "files.autoGuessEncoding": false,
                "files.encoding": "windows1252",
                "editor.formatOnType": true,
                "editor.rulers": [
                    120
                ],
                "editor.detectIndentation": true,
                "editor.tabSize": 3,
                "editor.wordSeparators": "`~!@#$%^&*()=+[{]}\\|;:'\",.<>/?",
                "editor.trimAutoWhitespace": false,
                "editor.useTabStops": false,
                "editor.renderIndentGuides": false
            }
        },
        "languages": [
            {
                "id": "COBOL",
                "aliases": [
                    "COBOL",
                    "Cobol",
                    "cobol"
                ],
                "firstLine": ".*(\\$[sS][eE][tT]|[pP][rR][oO][gG][rR][aA][mM]\\-[iI][dD]|[iI][dD][eE][nN][tT][iI][fF][iI][cC][aA][tT][iI][oO][nN]).*",
                "extensions": [
                    ".cbl",
                    ".cob",
                    ".cpy",
                    ".cpb",
                    ".tpl"
                ],
                "configuration": "./cobol.configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "COBOL",
                "scopeName": "source.cobol",
                "path": "./syntaxes/COBOL.tmLanguage.json"
            }
        ],
        "snippets": [
            {
                "language": "COBOL",
                "path": "./snippets/cobol.json"
            },
            {
                "language": "bat",
                "path": "./snippets/bat.json"
            }
        ],
        "commands": [
            {
                "command": "rech.editor.vscode.tab",
                "title": "tab"
            },
            {
                "command": "rech.editor.vscode.revtab",
                "title": "revtab"
            },
            {
                "command": "rech.editor.vscode.findNextParagraph",
                "title": "findNextParagraph"
            },
            {
                "command": "rech.editor.vscode.findPreviousParagraph",
                "title": "findPreviousParagraph"
            },
            {
                "comment": "Centraliza o comentário",
                "command": "rech.editor.vscode.centralizeComment",
                "title": "Centraliza o comentário"
            }
        ],
        "keybindings": [
            {
                "comment": "Ainda não é a rotina ideal... Mas por enquanto quebra um galho",
                "command": "editor.action.commentLine",
                "key": "alt+=",
                "when": "editorLangId == COBOL"
            },
            {
                "command": "rech.editor.vscode.cobolInsertStartComment",
                "key": "alt+numpad_multiply",
                "when": "editorLangId == COBOL"
            },
            {
                "command": "rech.editor.vscode.cobolInsertEndComment",
                "key": "ctrl+shift+numpad_multiply",
                "when": "editorLangId == COBOL"
            },
            {
                "command": "rech.editor.vscode.cobolInsertCommentLine",
                "key": "alt+n",
                "when": "editorLangId == COBOL"
            },
            {
                "command": "rech.editor.vscode.cobolInsertLineSeparator",
                "key": "alt+numpad_subtract",
                "when": "editorLangId == COBOL"
            },
            {
                "command": "rech.editor.vscode.tab",
                "key": "tab",
                "when": "editorLangId == COBOL && !inSnippetMode"
            },
            {
                "command": "rech.editor.vscode.revtab",
                "key": "shift+tab",
                "when": "editorLangId == COBOL && !inSnippetMode"
            },
            {
                "command": "rech.editor.vscode.findNextParagraph",
                "key": "alt+k",
                "when": "editorLangId == COBOL"
            },
            {
                "command": "rech.editor.vscode.findPreviousParagraph",
                "key": "alt+shift+k",
                "when": "editorLangId == COBOL"
            },
            {
                "command": "rech.editor.vscode.cursorPos51",
                "key": "ctrl+1",
                "when": "editorLangId == COBOL"
            },
            {
                "command": "rech.editor.vscode.cursorPos12",
                "key": "ctrl+2",
                "when": "editorLangId == COBOL"
            },
            {
                "command": "rech.editor.vscode.cursorPos30",
                "key": "ctrl+3",
                "when": "editorLangId == COBOL"
            },
            {
                "command": "rech.editor.vscode.cursorPos20",
                "key": "ctrl+4",
                "when": "editorLangId == COBOL"
            },
            {
                "command": "rech.editor.vscode.cursorPos35",
                "key": "ctrl+5",
                "when": "editorLangId == COBOL"
            },
            {
                "command": "rech.editor.vscode.cursorPos08",
                "key": "ctrl+8",
                "when": "editorLangId == COBOL"
            },
            {
                "command": "rech.editor.vscode.insertTodo",
                "key": "ctrl+shift+d",
                "when": "editorLangId == COBOL"
            },
            {
                "command": "rech.editor.vscode.cobolLineEndDot",
                "key": "alt+oem_period",
                "when": "editorLangId == COBOL"
            },
            {
                "command": "rech.editor.vscode.cobolLineEndComma",
                "key": "alt+oem_comma",
                "when": "editorLangId == COBOL"
            },
            {
                "command": "rech.editor.vscode.cobolInvertMoveOperators",
                "key": "ctrl+alt+d",
                "when": "editorLangId == COBOL"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "package": "vsce package --out f:/div/VSCode/extension/rech-editor-vscode/rech-editor-vscode.vsix",
        "compile": "tsc -p ./",
        "compile:client": "tsc -p ./",
        "compile:server": "tsc -p ./",
        "watch:client": "tsc -watch -p ./",
        "watch:server": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && mocha -r ts-node/register ./src/test/**/*.test.ts"
    },
    "dependencies": {
        "@types/iconv-lite": "0.0.1",
        "@types/q": "^1.0.0",
        "iconv-lite": "^0.4.24",
        "@types/mocha": "^2.2.48",
        "typescript": "^2.6.1",
        "vscode": "^1.1.21",
        "q": "^1.4.1",
        "@types/chai": "^4.1.6",
        "@types/node": "^8.10.25",
        "chai": "^4.2.0",
        "mocha": "^5.2.0",
        "ts-node": "^7.0.1",
        "vsce": "^1.53.0",
        "vscode-languageclient": "^4.1.4",
        "vscode-languageserver": "^4.1.3"
    },
    "devDependencies": {}
}
